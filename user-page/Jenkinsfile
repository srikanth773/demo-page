pipeline {
    agent any

    environment {
        IMAGE_NAME = "user-page"
        CONTAINER_NAME = "user-page"
        HOST_PORT = "8081"   // Jenkins runs on 8080, so use 8081 instead
        CONTAINER_PORT = "80"
    }

    stages {
        stage('Checkout') {
            steps {
                echo "Checking out source code..."
                git branch: 'main', url: 'https://github.com/srikanth773/demo-page'
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "Building Docker image..."
                dir('user-page') {
                    sh '''
                        docker build -t ${IMAGE_NAME}:latest .
                    '''
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                echo "Running Docker container..."
                dir('user-page') {
                    sh '''
                        # Stop and remove existing container if it exists
                        if [ "$(docker ps -aq -f name=${CONTAINER_NAME})" ]; then
                            echo "Removing old container..."
                            docker rm -f ${CONTAINER_NAME}
                        fi

                        # Run a new container on a non-conflicting port
                        docker run -d -p ${HOST_PORT}:${CONTAINER_PORT} --name ${CONTAINER_NAME} ${IMAGE_NAME}:latest
                    '''
                }
            }
        }
    }

    post {
        success {
            echo "üéâ Build and deployment successful!"
            echo "‚úÖ Your app is running at: http://<your-server-ip>:${HOST_PORT}"
        }
        failure {
            echo "‚ùå Build failed. Check the console output for details."
        }
    }
}
